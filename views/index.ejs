<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header'); -%>
    <body>
        <!-- Navigation-->
        <%- include('layouts/navbar'); -%>
        <!-- Page Header-->
        <% if (!loggedIn) { %>
        <header class="masthead" style="background-image: url('img/anime-home.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="site-heading">
                            <h1>Naruto Notions</h1>
                            <span class="subheading">An Anime Blogging Website where Anime newbs as well as Anime Otaku can come and discuss, share and give their opinions on the latest Anime</span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <% } %>
        <!-- Main Content-->
        <% if (loggedIn) { %>
            <header class="masthead" style="background-image: url('img/your-name.jpeg')">
                <div class="container position-relative px-4 px-lg-5">
                    <div class="row gx-4 gx-lg-5 justify-content-center">
                        <div class="col-md-10 col-lg-8 col-xl-7">
                            <div class="site-heading">
                                <h1>Welcome Back</h1>
                                <span class="subheading"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <!-- Post preview-->
                    <% for (var i = 0; i < blogPosts.length; i++) { %>
                        <div class="post-preview">
                            <a href="/post/<%= blogPosts[i]._id  %> ">
                                <h2 class="post-title">
                                    <%= blogPosts[i].title %>
                                </h2>
                                <h3 class="post-subtitle">
                                    <%-blogPosts[i].body %>
                                </h3>
                            </a>
                            <p class="post-meta">Posted by
                                <a href="#"><%= blogPosts[i].author %></a>
                                on <%= blogPosts[i].createdAt.toLocaleDateString() %>
                            </p>
                        </div>
                        <hr>
                    <% } %>
                    <!-- Pager-->
                    <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">Older Posts â†’</a></div>
                </div>
            </div>
        </div>
        <% } %>
        <!-- Footer-->
        <%- include('layouts/footer'); -%>
        <!-- Bootstrap core JS-->
        <%- include('layouts/scripts'); -%>
    </body>
</html>
